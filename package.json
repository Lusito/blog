{
  "name": "lusitos-tech-blog",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "author": "Santo Pfingsten",
  "scripts": {
    "build": "nx build --skip-nx-cache",
    "lint": "npm run lint:es && npm run lint:scss && npm run lint:package && npm run lint:style",
    "lint:es": "nx run-many --all --target=lint",
    "lint:es:fix": "npm run lint:es -- --fix",
    "lint:fix": "npm run lint:es:fix && npm run lint:scss:fix && npm run lint:package:fix && npm run lint:style:fix",
    "lint:package": "npm run lint:package:fix -- --check",
    "lint:package:fix": "sort-package-json package.json \"packages/*/package.json\"",
    "lint:scss": "stylelint --ignore-path .prettierignore \"packages/*/src/**/*.scss\"",
    "lint:scss:fix": "npm run lint:scss --fix",
    "lint:style": "npm run lint:style:base -- --check",
    "lint:style:base": "prettier \"packages/*/src/**/*.{ts,tsx,js,json,scss}\" \"packages/*/*.{ts,tsx,js,json,scss}\"",
    "lint:style:fix": "npm run lint:style:base -- --write",
    "start": "nx run-many --target=serve --projects=blog,custom-elements",
    "test": "nx run-many --target=test --all"
  },
  "dependencies": {
    "@fontsource/source-code-pro": "^4.5.9",
    "@fontsource/source-sans-pro": "^4.5.9",
    "@fontsource/source-serif-pro": "^4.5.7",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "classnames": "^2.3.1",
    "compression": "^1.7.4",
    "css-loader": "^6.7.1",
    "dom-helmet": "^0.8.0",
    "express": "^4.18.1",
    "front-matter": "^4.0.2",
    "happy-dom": "^5.0.0",
    "highlight.js": "^11.5.1",
    "image-size": "^1.0.1",
    "isomorphic-style-loader": "^5.3.2",
    "markdown-it": "^13.0.1",
    "scatman": "^0.8.0",
    "slug": "^5.3.0",
    "tsx-dom-ssr": "^0.8.0",
    "url-loader": "^4.1.1"
  },
  "devDependencies": {
    "@lusito/eslint-config": "^1.7.0",
    "@lusito/prettier-config": "^1.7.0",
    "@lusito/stylelint-config": "^1.6.0",
    "@nrwl/cli": "14.1.4",
    "@nrwl/eslint-plugin-nx": "14.1.4",
    "@nrwl/jest": "14.1.4",
    "@nrwl/js": "14.1.4",
    "@nrwl/linter": "14.1.4",
    "@nrwl/node": "14.1.4",
    "@nrwl/web": "14.1.4",
    "@nrwl/workspace": "14.1.4",
    "@types/jest": "27.4.1",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "16.11.7",
    "@types/slug": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "~5.18.0",
    "@typescript-eslint/parser": "~5.18.0",
    "eslint": "~8.12.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "jest": "27.5.1",
    "nx": "14.1.4",
    "prettier": "^2.5.1",
    "sort-package-json": "^1.57.0",
    "ts-jest": "27.1.4",
    "typescript": "~4.6.2"
  }
}
