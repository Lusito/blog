{
  "name": "lusitos-tech-blog",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "author": "Santo Pfingsten",
  "scripts": {
    "build": "rimraf dist && node -r ./esbuild-register.js src/blog/generate.tsx",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "dev-server": "node -r ./esbuild-register.js src/dev-server/main.tsx",
    "lint": "npm run lint:es && npm run lint:scss && npm run lint:package && npm run lint:style",
    "lint:es": "eslint \"src/**/*.{ts,tsx}\" --ext \".ts,.tsx\" --ignore-path .prettierignore",
    "lint:es:fix": "npm run lint:es -- --fix",
    "lint:fix": "npm run lint:es:fix && npm run lint:scss:fix && npm run lint:package:fix && npm run lint:style:fix",
    "lint:package": "sort-package-json --check",
    "lint:package:fix": "sort-package-json",
    "lint:scss": "stylelint --ignore-path .prettierignore \"src/**/*.scss\"",
    "lint:scss:fix": "npm run lint:scss --fix",
    "lint:style": "npm run lint:style:base -- --check",
    "lint:style:base": "prettier \"src/**/*.{ts,tsx,js,json}\" \"./*.{ts,tsx,js,json}\"",
    "lint:style:fix": "npm run lint:style:base -- --write",
    "start": "nodemon --exec \"npm run build && npm run dev-server\" -i dist -e '*'"
  },
  "dependencies": {
    "@fastify/static": "^6.5.0",
    "@fontsource/source-code-pro": "^4.5.12",
    "@fontsource/source-sans-pro": "^4.5.11",
    "@fontsource/source-serif-pro": "^4.5.9",
    "@types/compression": "^1.7.2",
    "classnames": "^2.3.1",
    "cross-env": "^7.0.3",
    "dom-helmet": "^0.8.0",
    "esbuild": "^0.15.12",
    "esbuild-register": "^3.3.3",
    "fastify": "^4.9.2",
    "front-matter": "^4.0.2",
    "happy-dom": "^6.0.4",
    "highlight.js": "^11.6.0",
    "image-size": "^1.0.2",
    "markdown-it": "^13.0.1",
    "nodemon": "^2.0.20",
    "pirates": "^4.0.5",
    "rimraf": "^3.0.2",
    "scatman": "^0.8.0",
    "scss-modules": "file:../scss-modules/scss-modules-0.8.0.tgz",
    "slug": "^8.0.0",
    "tsx-dom-ssr": "^0.8.0"
  },
  "devDependencies": {
    "@lusito/eslint-config": "^2.0.3",
    "@lusito/prettier-config": "^2.0.0",
    "@lusito/stylelint-config": "^2.0.2",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "18.7.14",
    "@types/slug": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "~5.36.1",
    "@typescript-eslint/parser": "~5.36.1",
    "sort-package-json": "^1.57.0",
    "typescript": "~4.8.2"
  }
}
