{
  "name": "lusitos-tech-blog",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "author": "Santo Pfingsten",
  "scripts": {
    "build": "rimraf dist && node -r ./esbuild-register.js src/blog/generate.tsx",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "dev-server": "node -r ./esbuild-register.js src/dev-server/main.tsx",
    "lint": "mono-lint --src=\"src/**\" --pkg=.",
    "lint:fix": "npm run lint -- --fix",
    "start": "nodemon -i dist -e '*' --exec \"npm run build && npm run dev-server\""
  },
  "dependencies": {
    "@fastify/static": "^8.1.1",
    "@fontsource/source-code-pro": "^4.5.12",
    "@fontsource/source-sans-pro": "^4.5.11",
    "@fontsource/source-serif-pro": "^4.5.9",
    "@lusito/require-libs": "^0.15.0",
    "cross-env": "^7.0.3",
    "dom-helmet": "^1.1.1",
    "esbuild": "^0.25.0",
    "esbuild-register": "^3.6.0",
    "fastify": "^5.2.1",
    "front-matter": "^4.0.2",
    "happy-dom": "^17.1.2",
    "highlight.js": "^11.11.1",
    "image-size": "^1.2.0",
    "markdown-it": "^14.1.0",
    "nodemon": "^3.1.9",
    "pirates": "^4.0.6",
    "rimraf": "^6.0.1",
    "scatman": "^0.11.0",
    "slug": "^10.0.0",
    "tsx-dom-ssr": "^1.1.0"
  },
  "devDependencies": {
    "@lusito/eslint-config": "^4.0.0",
    "@lusito/mono": "^0.20.0",
    "@lusito/prettier-config": "^3.2.0",
    "@lusito/stylelint-config": "^4.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "22.13.5",
    "@types/slug": "^5.0.9",
    "@typescript-eslint/eslint-plugin": "~8.24.1",
    "@typescript-eslint/parser": "~8.24.1",
    "sort-package-json": "^2.14.0",
    "typescript": "~5.7.3"
  },
  "monoLint": {
    "lintMarkdownLinks": {
      "warnOnlyPatterns": [
        "^https:\\/\\/v3\\.globalgamejam.*",
        "^\\/.*\\.html"
      ]
    }
  }
}
